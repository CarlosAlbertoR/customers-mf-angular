{
  "version": 2,
  "builds": [
    {
      "src": "shell/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "customers-mf/package.json", 
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/customers/(.*)",
      "dest": "/customers-mf/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/shell/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "installCommand": "pnpm install --frozen-lockfile",
  "buildCommand": "pnpm run build",
  "outputDirectory": "dist"
}