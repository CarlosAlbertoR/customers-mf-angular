{
  "version": 2,
  "name": "angular-microfrontend",
  "builds": [
    {
      "src": "shell/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "customers-mf/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "customers-mf/db.json",
      "use": "@vercel/json-server"
    }
  ],
  "routes": [
    {
      "src": "/api/customers/(.*)",
      "dest": "/customers-mf/db.json"
    },
    {
      "src": "/customers/(.*)",
      "dest": "/customers-mf/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/shell/$1"
    }
  ],
  "env": {
    "ENABLE_EXPERIMENTAL_COREPACK": "1"
  },
  "installCommand": "pnpm install --frozen-lockfile",
  "buildCommand": "pnpm run build"
}